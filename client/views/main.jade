template(name='main')
  .row-fluid
    .span12
      h1 Оператор
      {{loginButtons}}
  //- {{#if opr}}
  .row-fluid
    .span4
      //- in focus
      h2 Рабочий чат
      {{> chat}}
      //- {{> service}}
      {{> newMsg}}
    .span4
      //- work
      h2 В работе
      {{> chats}}
    .span4
      //- Info
      {{> newChats}}
      {{> arhive}}
  //- {{/if}}

template(name='newChats')
  h2 Запросы
  ul {{#each items}}
    li(class='{{onLine}}')
      a.open(href='#')  {{last}}
    {{else}}
    li Список пуст
  {{/each}}

template(name='arhive')
  h2 Старые
  .control-group
    label.control-label Фильтр
    .controls
      input.filter.search-query(type='search') {{filter}}
  .arhive
    ul {{#each items}}
      li
        a.open(href='#') {{text}}
      {{else}}
      li Список пуст
    {{/each}}


template(name='service')
  .btn-group
    button#exs.btn Эскалация
    button#email.btn В почту
  br


template(name='newMsg')
  textarea#msg

template(name='chats')
  .btn-group
    button#hour.btn Час
    button#day.btn День
    button#week.btn Неделя
    button#month.btn Месяц
  ul {{#each items}}
    li(class='{{onLine}}')
      a.open(href='#') {{last}}
    {{else}}
    li Список пуст
  {{/each}}

template(name='chat')
  ul {{#each items}}
    li {{text}}
  {{else}}
  li Список пуст
  {{/each}}